<header class="mainHeader">
  <img src="/images/readslogo.png" height="75px" width="75px" alt="gReads logo">
  <a href="/">
    <h1>Galvanize Reads</h1>
  </a>
</header>
<nav class="headerButtons">
  <div class="authorsButton">
      <img src="https://s3-us-west-2.amazonaws.com/assessment-images/galvanize_reads/photos/python_in_a_nutshell.jpg" height="75px">
    <a href="/authors">
      <h2>Authors</h2>
    </a>
  </div>
  <div class="booksButton">
    <img src="https://s3-us-west-2.amazonaws.com/assessment-images/galvanize_reads/photos/alex_martelli.jpg" height="75px">
    <a href="/books">
        <h2>Books</h2>
    </a>
  </div>
<main class="editForm">
  <h2>Edit a Book</h2>
  <form action="/{{book.id}}/editBook" method="post">
    <label for="title">Title</label>
      <input type="text" name="title" value="{{book.title}}">
    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{book.genre}}">
    <label for="description">Description</label>
    <textarea name="description">{{book.description}}</textarea>
    <label for="coverURL">Cover URL</label>
    <input type="url" name="coverURL" placeholder="Cover URL" value="{{book.coverURL}}">
    <button>Edit {{book.title}}?</button>
  </form>
</main>
