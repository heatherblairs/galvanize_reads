<head>
  <link href='https://fonts.googleapis.com/css?family=El+Messiri' rel='stylesheet' type='text/css'>
</head>
<header class="mainHeader">
  <img src="/images/readslogo.png" height="75px" width="75px" alt="gReads logo">
  <a href="/">
    <h1>Galvanize Reads</h1>
  </a>
</header>
<nav class="headerButtons">
  <div class="authorsButton">
      <img src="https://s3-us-west-2.amazonaws.com/assessment-images/galvanize_reads/photos/python_in_a_nutshell.jpg" height="75px">
    <a href="/authors">
      <h2>Authors</h2>
    </a>
  </div>
  <div class="booksButton">
    <img src="https://s3-us-west-2.amazonaws.com/assessment-images/galvanize_reads/photos/alex_martelli.jpg" height="75px">
    <a href="/books">
        <h2>Books</h2>
    </a>
  </div>
<main class="deleteForm">
  <h2>Delete an Author</h2>
  <form action="/{{author.id}}/deleteAuthor" method="post">
    <img class="authorPortrait" src="{{author.portraitURL}}" alt="Portrait URL">
    <h3>{{author.first_name}} {{author.last_name}}</h3>
    <p>{{author.biography}}</p>
    <button class="editOrDeleteButton" type="submit">Delete {{author.first_name}} {{author.last_name}}?</button>
  </form>
</main>
